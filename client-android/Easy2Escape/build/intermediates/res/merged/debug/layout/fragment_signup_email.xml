<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="#88000000"
      android:scaleType="fitXY"/>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="20dip"
      android:paddingLeft="20dip"
      android:paddingRight="20dip"
      android:paddingBottom="40dip"
      android:orientation="vertical">
    <RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/window_background">
      <TextView
	  android:id="@+id/txt_title"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:text="이메일로 회원가입"
	  android:background="@color/primary"
	  android:paddingTop="8dip"
	  android:paddingBottom="8dip"
	  android:paddingLeft="16dip"
	  android:paddingRight="16dip"
	  android:textColor="#fff"
	  android:textSize="18dip"/>
      <ScrollView
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:layout_below="@id/txt_title">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/window_background"
	    android:orientation="vertical">
	  <RelativeLayout
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:paddingStart="16dip"
	      android:paddingEnd="16dip"
	      android:background="#fff">
	    <EditText
		android:id="@+id/edit_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
		android:textColor="@android:color/black"
		android:paddingBottom="16dip"
		android:paddingTop="16dip"
		android:hint="이름을 입력해 주세요"
		android:textColorHint="#a8a9ae"
		android:background="@null"
		android:singleLine="true"/>
	  </RelativeLayout>
	  <View
	      android:layout_width="match_parent"
	      android:layout_height="1dip"
	      android:background="@color/window_background"/>
	  <RelativeLayout
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:paddingStart="16dip"
	      android:paddingEnd="16dip"
	      android:background="#fff">
	    <EditText
		android:id="@+id/edit_email"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
		android:textColor="@android:color/black"
		android:paddingBottom="16dip"
		android:paddingTop="16dip"
		android:hint="이메일을 입력해주세요"
		android:textColorHint="#a8a9ae"
		android:background="@null"
		android:singleLine="true"/>
	  </RelativeLayout>
	  <View
	      android:layout_width="match_parent"
	      android:layout_height="1dip"
	      android:background="@color/window_background"/>
	  <RelativeLayout
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:paddingStart="16dip"
	      android:paddingEnd="16dip"
	      android:background="#fff">
	    <EditText
		android:id="@+id/edit_password"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
		android:textColor="@android:color/black"
		android:paddingBottom="16dip"
		android:paddingTop="16dip"
		android:hint="비밀번호를 입력해주세요"
		android:password="true"
		android:textColorHint="#a8a9ae"
		android:background="@null"
		android:singleLine="true"/>
	  </RelativeLayout>
	  <View
	      android:layout_width="match_parent"
	      android:layout_height="1dip"
	      android:background="@color/window_background"/>
	  <RelativeLayout
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:paddingStart="16dip"
	      android:paddingEnd="16dip"
	      android:background="#fff">
	    <EditText
		android:id="@+id/edit_password_ok"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
		android:textColor="@android:color/black"
		android:paddingBottom="16dip"
		android:paddingTop="16dip"
		android:password="true"
		android:hint="비밀번호를 다시 입력해 주세요"
		android:textColorHint="#a8a9ae"
		android:background="@null"
		android:singleLine="true"/>
	  </RelativeLayout>
	  <View
	      android:layout_width="match_parent"
	      android:layout_height="1dip"
	      android:background="@color/window_background"/>
	  <RelativeLayout
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:paddingStart="16dip"
	      android:paddingEnd="16dip"
	      android:background="#fff">
	    <EditText
		android:id="@+id/edit_recommender"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
		android:textColor="@android:color/black"
		android:paddingBottom="16dip"
		android:paddingTop="16dip"
		android:password="true"
		android:hint="추천인 코드를 입력해주세요"
		android:textColorHint="#a8a9ae"
		android:background="@null"
		android:singleLine="true"/>
	  </RelativeLayout>
	  <View
	      android:layout_width="match_parent"
	      android:layout_height="1dip"
	      android:background="@color/window_background"/>
	  <TextView
	      android:id="@+id/txt_agree1"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:paddingTop="16dip"
	      android:paddingLeft="16dip"
	      android:paddingRight="16dip"
	      android:textSize="15dip"
	      android:textColor="#000"
	      android:text="회원가입을 함으로써 바로꽃방의 이용약관,"/>
	  <TextView
	      android:id="@+id/txt_agree2"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:paddingLeft="16dip"
	      android:paddingRight="16dip"
	      android:paddingBottom="16dip"
	      android:textSize="15dip"
	      android:textColor="#000"
	      android:text="개인정보 취급방침 및 운영원칙에 동의하시게 됩니다"/>
	  <View
	      android:layout_width="match_parent"
	      android:layout_height="?attr/actionBarSize"
	      android:background="@color/window_background"/>
	</LinearLayout>
      </ScrollView>
      <Button
	  android:id="@+id/btn_next"
	  android:layout_width="match_parent"
	  android:layout_height="?attr/actionBarSize"
	  android:layout_gravity="center"
	  android:layout_alignParentBottom="true"
	  android:textColor="@color/text_black_in_white"
	  android:textSize="15dip"
	  android:text="가입하기"/>
    </RelativeLayout>
  </LinearLayout>
</RelativeLayout>
